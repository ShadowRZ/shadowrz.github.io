---
import FaviconHead from "./FaviconHead.astro";
interface Props {
  title: string
}
const { title } = Astro.props;

import "@fontsource/jost/latin.css";
---
<html>
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<meta name="generator" content={Astro.generator} />
    <script is:inline src="https://cdn.jsdelivr.net/npm/iconify-icon@1.0.7/dist/iconify-icon.min.js"></script>
    <FaviconHead />
		<title>{ title }</title>
	</head>
	<body class="bg-pink-200 dark:bg-pink-950 min-h-screen flex justify-center font-sans">
		<slot/>
	</body>
</html>
