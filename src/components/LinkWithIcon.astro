---
interface Props {
  icon: string,
  href?: string,
}
const { icon, href } = Astro.props;
---

{
  href
  ?
    <a class="group" href={href}>
      <iconify-icon inline icon={icon}></iconify-icon>
      <span class="pl-1 no-underline group-hover:underline"><slot/></span>
    </a>
  :
    <span>
      <iconify-icon inline icon={icon}></iconify-icon>
      <span class="pl-1"><slot/></span>
    </span>
}
